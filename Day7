/* SORTING PF AN ARRAY USING SELECTION SORT*/

#include <iostream>
#include <climits>

using namespace std;

int main()
{
   
    
    int arr[5]= {2,7,4,9,1};
    
    int i,j=0;
    
    for(; i<4; i++)
    {
        
         int index =i;
         
         
         for(j=i+1; j<5;j++)
         {
             
           if(arr[index]>arr[j])
            {
                index= j;
                
            }
        }
        
        swap(arr[i],arr[index]);
        
    }
    
    for(i=0; i<5;i++)
    {
        cout<<arr[i]<<" ";
    }
    

    return 0;
}
