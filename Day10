/* BINARY SEARCH ALGORITHM */

#include <iostream>
#include <climits>

using namespace std;

int main()
{
    
   int size;
   cout<<"enter size of array:-";
    cin>>size;
    
    int arr[50];
    
    cout<<"elemnts of array:-";
    
   for(int i=0; i<size;i++)
   {
       cin>>arr[i];
   }

    
    int search=0;
    cout<<"enter the search element:-";
    cin>>search;
    
    int first =0;
    int last =size-1;
    int mid;
    
    while(first<=last)
    { 
        
        mid = (first + last)/2;
        
        if(arr[mid]==search)
        {
            cout<<mid;
            break;
        }
        
       else if(arr[mid]>search)
       {
           last = mid-1;
       }
       
       else
       {
           first = mid+1;
       }
    }
    
    if(first>last)
    {
        cout<<"element not found";
    }
    
    
    return 0;
}
