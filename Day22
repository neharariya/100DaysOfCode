REVISION:-  PATTERN PRINTING 


* * * * * * * *
* * *     * * * 
* *         * * 
*             * 
*             * 
* *         * * 
* * *     * * * 
* * * * * * * * 


#include <iostream>

using namespace std;

int main()
{
     
     for(int row=1; row<=4;row++)
     {
         for(int col=5;col>row;col--)
         {
             cout<<"*"<<" ";
         }
         
         for(int col=2;col<2*row;col++)
         {
             cout<<"  ";
         }
         
         for(int col=5;col>row;col--)
         {
             cout<<"*"<<" ";
         }
         
         
         
         cout<<endl;
         
     }
         
     for(int row=1; row<=4;row++)
     {
             
            for(int col=0;col<row;col++)
            {
               cout<<"*"<<" ";
            }
         
            for(int col=8;col>2*row;col--)
            {
              cout<<"  ";
            }
         
            for(int col=0;col<row;col++)
            {
              cout<<"*"<<" ";
            }
         
         
         
         cout<<endl;
         
    }
         
         
         
     

    return 0;
}
